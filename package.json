{
    "name": "enketo-website",
    "version": "0.0.1",
    "description": "Enketo Project Website",
    "author": "Martijn van de Rijdt <martijn@enketo.org> (https://enketo.org)",
    "homepage": "https://enketo.org",
    "bugs": "https://github.com/enketo/enketo-website/issues",
    "ua": "UA-6765789-10",
    "scripts": {
        "start": "http-server public",
        "test": "jshint src/js/all.js && npm run build",
        "prepublish": "npm run build",
        "clean": "if [ -d \"public\" ]; then rm -R public ; fi; mkdir public; mkdir public/js",
        "copy": "cp -R src/media public/media && cp -f src/js/navigation.json public/js/ && cp -f _* public",
        "sitemap": "node ./tools/sitemap.js",
        "js": "browserify src/js/all.js -o public/js/all.js -t babelify",
        "uglifyjs": "uglifyjs public/js/all.js -o public/js/all.min.js -m -c",
        "pug": "pug -O tools/options.js src/views -o public",
        "pug-w": "pug -O tools/options.js src/views -o public -w",
        "css": "node-sass src/scss -o public/css",
        "css-w": "node-sass src/scss -o public/css -w",
        "livereload": "livereload \"public/css/**/*.css, public/**/*.html\" -d -w 1000",
        "build": "npm run clean && npm run copy && npm run sitemap && npm run js && npm run pug && npm run css && npm run uglifyjs",
        "develop": "npm run js & npm run pug-w & npm run css-w & npm run livereload & http-server public"
    },
    "license": "Apache-2.0",
    "devDependencies": {
        "babel-preset-es2015": "6.9.x",
        "babelify": "7.3.xs",
        "browserify": "13.1.x",
        "highlight.js": "9.9.x",
        "http-server": "0.9.x",
        "jshint": "2.9.x",
        "livereload": "0.5.x",
        "marked": "0.3.x",
        "node-sass": "4.1.x",
        "pug": "2.0.0-beta6",
        "pug-cli": "1.0.0-alpha6",
        "uglify-js": "2.7.x"
    },
    "dependencies": {
        "babel-polyfill": "6.16.x",
        "details-polyfill-es6": "1.0.x"
    }
}
